<%# app/views/admin/parking_managers/index.html.erb %>
<div class="p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">駐車場管理者一覧</h1>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">管理者名</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">メールアドレス</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">担当駐車場数</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">登録日</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">アクション</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @parking_managers.each do |manager| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= manager.full_name || "未設定" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= manager.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= manager.parking_lots.size %> 件
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= l manager.created_at, format: :short %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to '詳細', admin_parking_manager_path(manager), class: "text-indigo-600 hover:text-indigo-900" %>
              <span class="text-gray-300">|</span>
              <%= link_to '契約者一覧', contractors_admin_parking_manager_path(manager), class: "text-green-600 hover:text-green-900" %>
              <span class="text-gray-300">|</span>
              <%= link_to '駐車スペース一覧', '#', class: "text-blue-600 hover:text-blue-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
