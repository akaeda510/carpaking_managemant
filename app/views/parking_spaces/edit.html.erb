<div class="min-h-screen bg-gray-50 flex flex-col items-center py-12 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white shadow-xl rounded-lg p-8" data-controller="parking-space-form">

    <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">
      駐車場スペース編集
    </h2>

    <%= render "shared/error_messages", object: @parking_space %>
    <%= render "form", parking_lot: @parking_lot, parking_space: @parking_space %>

    <div class="mt-6 text-center">
      <%= link_to "戻る", [@parking_lot, @parking_space], class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
