<div class="min-h-screen bg-gray-50 flex flex-col items-center py-12 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white shadow-xl rounded-lg p-8">
    
    <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">
     駐車場スペース作成
    </h2>

    <%= form_with(model: @parking_space, class: "space-y-6" ) do |f| %>

      <section class="border border-gray-200 p-6 rounded-lg bg-white">
        <h3 class="text-xl font-semibold text-indigo-600 mb-4 border-b pb-2">基本情報</h3>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          
          <div class="col-span-1 sm:col-span-2">
            <%= f.label :name, '駐車場スペース名', class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, autofocus: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :width, '横幅', class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :width, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :length, '長さ', class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :length, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-1 sm:col-span-2">
            <%= f.label :description, '説明、概要', class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :description, rows: 5, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
      </section>

      <div class="actions pt-4">
        <%= f.submit "駐車場スペース作成", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
    <% end %>
        
        <%= link_to "駐車場一覧に戻る", parking_lots_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>
</div>
