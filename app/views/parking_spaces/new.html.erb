<div class="min-h-screen bg-gray-50 flex flex-col items-center py-12 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white shadow-xl rounded-lg p-8" data-controller="parking-space-form">

    <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">
      駐車場スペース作成
    </h2>

    <% if @parking_space.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
        <p class="font-bold"><%= @parking_space.errors.count %>件のエラーがあります:</p>
        <ul>
          <% @parking_space.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render "form", parking_lot: @parking_lot, parking_space: @parking_space %>

    <div class="mt-6 text-center">
      <%= link_to "駐車場スペース一覧に戻る", parking_lot_parking_spaces_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
