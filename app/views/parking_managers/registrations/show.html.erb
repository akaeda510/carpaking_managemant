<%# app/views/users/show.html.erb %>

<div class="min-h-screen bg-gray-50 flex flex-col items-center py-10 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white shadow-xl rounded-lg p-6 sm:p-8">
    
    <header class="pb-6 border-b border-gray-200">
      <h1 class="text-3xl font-extrabold text-gray-900 flex items-center">
        ­ЪЉц сѓбсѓФсѓдсЃ│сЃѕУЕ│у┤░ТЃЁта▒
      </h1>
      <p class="mt-2 text-sm text-gray-500">сЂћуЎ╗жї▓сЂ«ТЃЁта▒сѓњуб║УфЇсЃ╗уиежЏєсЂДсЂЇсЂЙсЂЎсђѓ</p>
    </header>

    <div class="mt-8 divide-y divide-gray-200">
      
      <section class="py-4">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">тЪ║ТюгТЃЁта▒</h2>
        <dl class="space-y-4">
          
          <%# Т░ЈтљЇ %>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-gray-50 rounded-lg">
            <dt class="text-sm font-medium text-gray-500">Т░ЈтљЇ</dt>
            <dd class="text-sm text-gray-900 sm:col-span-2">
              <%= @user.last_name %> <%= @user.first_name %>
            </dd>
          </div>
          
          <%# сЃАсЃ╝сЃФсѓбсЃЅсЃгсѓ╣ %>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-white rounded-lg">
            <dt class="text-sm font-medium text-gray-500">сЃАсЃ╝сЃФсѓбсЃЅсЃгсѓ╣</dt>
            <dd class="text-sm text-gray-900 sm:col-span-2"><%= @user.email %></dd>
          </div>
          
          <%# жђБухАтЁѕжЏ╗УЕ▒уЋфтЈи %>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-gray-50 rounded-lg">
            <dt class="text-sm font-medium text-gray-500">жЏ╗УЕ▒уЋфтЈи (т┐Ёжаѕ)</dt>
            <dd class="text-sm text-gray-900 sm:col-span-2">
              <%= @user.phone_number.present? ? @user.phone_number.to_s.gsub(/(\d{3})(\d{4})(\d{4})/, '\1-\2-\3') %>
            </dd>
          </div>

          <%# уиіТђЦжђБухАтЁѕ (С╗╗ТёЈ) %>
          <% if @user.contact_number.present? %>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-white rounded-lg">
              <dt class="text-sm font-medium text-gray-500">уиіТђЦжђБухАтЁѕ (С╗╗ТёЈ)</dt>
              <dd class="text-sm text-gray-900 sm:col-span-2">
                <%= @user.contact_number.to_s.gsub(/(\d{2,5})(\d{1,4})(\d{4})/, '\1-\2-\3') %>
              </dd>
            </div>
          <% end %>

        </dl>
      </section>

      <hr class="my-6">
      
      <section class="py-4">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">­ЪЈа СйЈТЅђТЃЁта▒</h2>
        <dl class="space-y-4">

          <%# СйЈТЅђ %>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-gray-50 rounded-lg">
            <dt class="text-sm font-medium text-gray-500">СйЈТЅђ</dt>
            <dd class="text-sm text-gray-900 sm:col-span-2">
              <%= @user.prefecture %>
              <%= @user.city %>
              <%= @user.street_address %>
            </dd>
          </div>

          <%# т╗║уЅЕтљЇ (С╗╗ТёЈ) %>
          <% if @user.building.present? %>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-white rounded-lg">
              <dt class="text-sm font-medium text-gray-500">т╗║уЅЕтљЇсЃ╗жЃет▒ІуЋфтЈи</dt>
              <dd class="text-sm text-gray-900 sm:col-span-2"><%= @user.building %></dd>
            </div>
          <% end %>

        </dl>
      </section>
      
      <hr class="my-6">

      <section class="py-4">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">сѓбсѓФсѓдсЃ│сЃѕсѓ╣сЃєсЃ╝сѓ┐сѓ╣</h2>
        <dl class="space-y-4">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-3 px-4 bg-gray-50 rounded-lg">
            <dt class="text-sm font-medium text-gray-500">уЎ╗жї▓ТЌЦ</dt>
            <dd class="text-sm text-gray-900 sm:col-span-2">
              <%= @user.created_at.strftime("%Yт╣┤%mТюѕ%dТЌЦ") %>
            </dd>
          </div>
        </dl>
      </section>

    </div>

    <div class="mt-10 flex justify-end">
      <%= link_to 'сѓбсѓФсѓдсЃ│сЃѕТЃЁта▒сѓњуиежЏє', edit_user_registration_path, 
          class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
    
  </div>
</div>
