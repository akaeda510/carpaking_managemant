<section class="mt-8">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-bold text-gray-900">契約状況</h3>

    <%= link_to contractor_contract_parking_spaces_path(contractor), 
        class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-indigo-600 text-sm font-medium rounded-md shadow-sm text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      契約・管理（追加・編集）
    <% end %>
  </div>

  <% active_contracts = contractor.contract_parking_spaces.active.decorate %>
  <div class="space-y-3">
    <% if active_contracts.any? %>
      <p class="text-xs font-semibold text-indigo-600 uppercase tracking-wider ml-1">現在の契約</p>
      <% active_contracts.each_with_index do |contract, index| %>
        <div class="group bg-white border border-gray-200 rounded-lg p-4 flex items-center justify-between hover:border-indigo-200 hover:shadow-sm transition-all">
          <div class="flex items-center space-x-4">
            <span class="text-xs font-bold text-gray-400 bg-gray-100 group-hover:bg-indigo-100 group-hover:text-indigo-600 w-6 h-6 flex items-center justify-center rounded-full transition-colors">
              <%= index + 1 %>
            </span>
            <div>
              <div class="text-sm font-bold text-gray-900"><%= contract.parking_space.name %></div>
              <div class="text-xs text-gray-500 flex flex-wrap gap-x-2 mt-0.5">
                <span class="font-medium text-gray-600"><%= contract.parking_space.parking_lot.name %></span>
                <span class="text-gray-300">|</span>
                <span><%= contract.start_date.strftime('%Y/%m/%d') %> 〜 <%= contract.display_end_date %></span>
              </div>
            </div>
          </div>
          <%= link_to [contract.parking_space.parking_lot, contract.parking_space], class: "text-gray-300 group-hover:text-indigo-500 transition-colors" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-6 border-2 border-dashed border-gray-200 rounded-xl bg-gray-50/50">
        <p class="text-sm text-gray-500">現在、有効な契約はありません。</p>
      </div>
    <% end %>
  </div>

  <% terminated_contracts = contractor.contract_parking_spaces.terminated.decorate %>
  <% if terminated_contracts.any? %>
    <div class="mt-8 space-y-3">
      <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider ml-1">過去の契約履歴</p>
      <% terminated_contracts.each do |contract| %>
        <div class="bg-gray-50 border border-gray-100 rounded-lg p-3 flex items-center justify-between opacity-70 grayscale-[0.5] hover:grayscale-0 transition-all">
          <div class="flex items-center space-x-4">
            <div class="bg-gray-200 p-2 rounded-full">
              <i class="fa-solid fa-clock-rotate-left text-gray-400 text-xs"></i>
            </div>
            <div>
              <div class="text-sm font-medium text-gray-600"><%= contract.parking_space.name %></div>
              <div class="text-[10px] text-gray-400">
                <%= contract.start_date.strftime('%Y/%m/%d') %> 〜 <%= contract.end_date.strftime('%Y/%m/%d') %>（終了済）
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
